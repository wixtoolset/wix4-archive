    <ClInclude Include="zlib.h" />
  </ItemGroup>
  <ItemGroup>
    <ResourceCompile Include="BlockDeflateStream.rc" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System" />
  </ItemGroup>

  <Import Project="$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildProjectDirectory), wix.proj))\tools\WixBuild.targets" />
