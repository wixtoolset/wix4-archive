<?ifndef Version?>
<?define Version = 1.0.0.0?>
<?endif?>

<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
  <Bundle Name="~$(var.TestName) - Bundle A" Version="$(var.Version)" UpgradeCode="{90ED10D5-B187-4470-B498-05D80DAB729A}">
    <Log Prefix="~$(var.TestName)_BundleA"/>

    <Variable Name="TestName" Value="$(var.TestName)" />

    <BootstrapperApplicationRef Id="WixStandardBootstrapperApplication.RtfLicense" />

    <Chain>
      <MsiPackage Id="PackageA" Name="~$(var.TestName)_PackageA.msi" Compressed="yes" SourceFile="!(bindpath.packageA)\A.msi" Vital="yes" />
      <RollbackBoundary Transaction='yes' />
      <MsiPackage Id="PackageB" Name="~$(var.TestName)_PackageB.msi" Compressed="yes" SourceFile="!(bindpath.packageB)\B.msi" Vital="yes" />
    </Chain>
  </Bundle>
</Wix>
